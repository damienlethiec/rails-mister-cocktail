<h1><%= @cocktail.name %></h1>
<h2>Ingredients</h2>
<% @cocktail.doses.each do |dose| %>
  <p>Name : <%= dose.ingredient.name %></p>
  <p>Description : <%= dose.description %></p>
  <p><%= link_to "Delete dose", cocktail_dose_path(@cocktail, dose), method: :delete %></p>
<% end %>

<h2>Add a dose</h2>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :ingredient_id, collection: Ingredient.all %>
  <%= f.input :description %>
    <% if @dose.errors.any? %>
    <% @dose.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= f.button :submit %>
<% end %>

