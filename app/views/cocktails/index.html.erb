<h1>Here are all the cocktails</h1>
<%= link_to "Add a cocktail", new_cocktail_path %>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(-225deg, rgba(255,102,102,0.4) 0%, rgba(255,204,102, 0.4) 50%), url('http://placehold.it/350x150'); background-size: cover;">
          <div class="card-category"><%= cocktail.name %></div>
          <%= link_to "#", cocktail_path(cocktail), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
